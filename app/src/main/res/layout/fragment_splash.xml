<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negro"
    tools:context=".Presentacion.ui.RegistrerLogin.RegistrerLoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo1"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/presentacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/matchst"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="serif" />
        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="50dp"
            android:padding="12dp"
            android:backgroundTint="#FD2386"
            android:text="@string/Sing"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/login1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="32dp"
            android:padding="20dp"
            android:drawableLeft="@drawable/fone"
            android:text="@string/telefono"
            android:backgroundTint="@color/negro"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/login2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="32dp"
            android:padding="20dp"
            android:drawableLeft="@drawable/google3"
            android:text="@string/google"
            android:backgroundTint="@color/negro"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/login3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="32dp"
            android:padding="20dp"
            android:drawableLeft="@drawable/face"
            android:text="@string/facebook"
            android:backgroundTint="@color/negro"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="RegÃ­strate"
            android:textSize="14sp"
            android:textStyle="italic" />


    </LinearLayout>

</FrameLayout>